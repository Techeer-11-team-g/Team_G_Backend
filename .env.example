# =============================================================================
# Team_G_Backend 환경변수 설정 파일
# =============================================================================
#
# 사용법:
#   1. 이 파일을 복사해서 .env 파일로 만듭니다
#      - Mac/Linux: cp .env.example .env
#      - Windows: copy .env.example .env
#   2. .env 파일을 열어서 값들을 수정합니다
#   3. .env 파일은 절대 git에 올리면 안됩니다! (비밀정보 포함)
#
# 주의사항:
#   - 값에 따옴표("") 붙이지 마세요
#   - 등호(=) 앞뒤로 공백 넣지 마세요
#   - 잘못된 예: SECRET_KEY = "my-key"
#   - 올바른 예: SECRET_KEY=my-key
#
# =============================================================================


# -----------------------------------------------------------------------------
# Django 기본 설정 (필수)
# -----------------------------------------------------------------------------

# 보안 키 - 아무 긴 문자열로 변경하세요 (비밀번호처럼 생각)
# 예: SECRET_KEY=my-super-secret-key-12345-abcde-fghij
SECRET_KEY=your-secret-key-here

# 디버그 모드 - 개발할 때는 True, 실제 서비스할 때는 False
DEBUG=True

# 접속 허용 도메인 - 쉼표로 구분
ALLOWED_HOSTS=localhost,127.0.0.1


# -----------------------------------------------------------------------------
# MySQL 데이터베이스 설정 (필수)
# -----------------------------------------------------------------------------

# 데이터베이스 이름
DB_NAME=team_g_db

# 데이터베이스 사용자 이름
DB_USER=root

# 데이터베이스 비밀번호 - 반드시 변경하세요!
DB_PASSWORD=your-db-password

# 데이터베이스 서버 주소
# - Docker 사용시: db
# - 로컬 개발시: localhost
# - Cloud SQL 사용시: Cloud SQL IP 주소
DB_HOST=db

# 데이터베이스 포트 (보통 3306)
DB_PORT=3306


# -----------------------------------------------------------------------------
# Redis 설정 (Celery 결과 저장, 캐시용)
# -----------------------------------------------------------------------------

# Redis 서버 주소
# - Docker 사용시: redis
# - 로컬 개발시: localhost
REDIS_HOST=redis

# Redis 포트 (보통 6379)
REDIS_PORT=6379


# -----------------------------------------------------------------------------
# RabbitMQ 설정 (Celery 작업 큐)
# -----------------------------------------------------------------------------

# RabbitMQ 서버 주소
# - Docker 사용시: rabbitmq
# - 로컬 개발시: localhost
RABBITMQ_HOST=rabbitmq

# RabbitMQ 포트 (보통 5672)
RABBITMQ_PORT=5672

# RabbitMQ 사용자 (기본값 사용 가능)
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest


# -----------------------------------------------------------------------------
# Celery 설정 (선택 - 기본값 자동 생성됨)
# -----------------------------------------------------------------------------

# 직접 설정하려면 주석 해제
# CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672//
# CELERY_RESULT_BACKEND=redis://redis:6379/0


# -----------------------------------------------------------------------------
# OpenSearch 설정 (벡터 검색용)
# -----------------------------------------------------------------------------

# OpenSearch 서버 주소
# - Docker 사용시: opensearch
# - 로컬 개발시: localhost
OPENSEARCH_HOST=opensearch

# OpenSearch 포트 (보통 9200)
OPENSEARCH_PORT=9200

# OpenSearch 사용자 (기본값 사용 가능)
OPENSEARCH_USER=admin
OPENSEARCH_PASSWORD=admin

# SSL 사용 여부 (로컬에서는 False)
OPENSEARCH_USE_SSL=False


# -----------------------------------------------------------------------------
# OpenAI / LangChain 설정 (필수 - API 키 필요)
# -----------------------------------------------------------------------------

# OpenAI API 키 (필수!)
# 발급 방법: https://platform.openai.com/api-keys
# sk-로 시작하는 키를 복사해서 붙여넣으세요
OPENAI_API_KEY=your-openai-api-key

# LangChain 추적 (선택 - 디버깅용)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=


# -----------------------------------------------------------------------------
# fashn.ai 설정 (가상 피팅용)
# -----------------------------------------------------------------------------

# fashn.ai API 키 (필수!)
# 발급 방법: https://fashn.ai 에서 가입 후 발급
FASHN_API_KEY=your-fashn-api-key


# -----------------------------------------------------------------------------
# Google Cloud 설정 (이미지 저장, Vision API)
# -----------------------------------------------------------------------------

# GCS 버킷 이름 (Google Cloud Console에서 생성)
GCS_BUCKET_NAME=your-bucket-name

# GCP 프로젝트 ID
GCS_PROJECT_ID=your-project-id

# 서비스 계정 키 파일 경로
# Google Cloud Console > IAM > 서비스 계정에서 JSON 키 다운로드 후 경로 입력
# 예: /Users/username/keys/gcp-credentials.json
GCS_CREDENTIALS_FILE=/path/to/credentials.json
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# 미디어 파일 URL 경로
MEDIA_URL=/media/


# -----------------------------------------------------------------------------
# CORS 설정 (프론트엔드 연동)
# -----------------------------------------------------------------------------

# 프론트엔드 주소 (쉼표로 구분)
# React 기본: http://localhost:3000
# Vite 기본: http://localhost:5173
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173


# -----------------------------------------------------------------------------
# Grafana 설정 (모니터링 대시보드)
# -----------------------------------------------------------------------------

# Grafana 관리자 계정 (처음 로그인용)
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin


# -----------------------------------------------------------------------------
# 로깅 설정
# -----------------------------------------------------------------------------

# 로그 레벨
# - DEBUG: 모든 로그 (개발용)
# - INFO: 정보 + 경고 + 에러
# - WARNING: 경고 + 에러
# - ERROR: 에러만
DJANGO_LOG_LEVEL=INFO
